<Page x:Class="ConconiTestApp.Pages.HomeScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:ConconiTestApp.Pages"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Rectangle Fill="{ThemeResource PhoneAccentBrush}"
                   Height="80"
                   VerticalAlignment="Top"
                   Margin="-5,-30,-5,0" />
        <StackPanel>
            <TextBlock Text="Test Hub"
                       FontSize="34"
                       Margin="10" />
            <Grid Margin="10"
                  Height="120">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Rectangle Grid.Column="0"
                           Fill="#FF2F87D1" />
                <Rectangle Grid.Column="1"
                           Fill="Green" />

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Aim Velocity"
                               HorizontalAlignment="Center"
                               FontSize="26"
                               Margin="10,10,10,0" />
                    <TextBlock Text="5 km/h"
                               HorizontalAlignment="Center"
                               FontSize="34"
                               Margin="10,10,10,0" />
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Actual Velocity"
                               HorizontalAlignment="Center"
                               FontSize="26"
                               Margin="10,10,10,0" />
                    <TextBlock Text="5 km/h"
                               HorizontalAlignment="Center"
                               FontSize="34"
                               Margin="10,10,10,0" />
                </StackPanel>



            </Grid>
            <Grid Height="100"
                  Margin="10">
                <Rectangle Fill="#FF2F87D1" />
                <StackPanel>
                    <TextBlock Text="Your Pulse"
                               FontSize="26"
                               Margin="10,10,10,0" />
                    <TextBlock Text="120 bpm"
                               HorizontalAlignment="Center"
                               FontSize="34" />
                </StackPanel>

            </Grid>

            <Grid Height="100"
                  Margin="10">
                <Rectangle Fill="#FF2F87D1" />
                <StackPanel>
                    <TextBlock Text="Time Passed"
                               FontSize="26"
                               Margin="10,10,10,0" />
                    <TextBlock Text="00:12:20"
                               HorizontalAlignment="Center"
                               FontSize="34" />
                </StackPanel>

            </Grid>

            <Grid Height="100"
                  Margin="10">
                <Rectangle Fill="#FF2F87D1" />
                <StackPanel>
                    <TextBlock Text="Distance covered"
                               FontSize="26"
                               Margin="10,10,10,0" />
                    <TextBlock Text="100 m"
                               HorizontalAlignment="Center"
                               FontSize="34" />
                </StackPanel>

            </Grid>
            <Button Content="Start"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Background="Green"
                    BorderThickness="0"
                    Margin="10"
                    Height="60"
                    Width="140" />
        </StackPanel>
    </Grid>
</Page>