<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ConconiMain"
    android:orientation="vertical">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start"
        android:id="@+id/test_button_start"
        android:layout_above="@+id/test_button_stop"
        android:layout_alignStart="@+id/test_button_stop" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="stop"
        android:id="@+id/test_button_stop"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="speed"
        android:id="@+id/test_text_log_speed"
        android:layout_alignBaseline="@+id/test_button_start"
        android:layout_alignBottom="@+id/test_button_start"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/test_text_log_distance"
        android:layout_alignBaseline="@+id/test_button_stop"
        android:layout_alignBottom="@+id/test_button_stop"
        android:layout_alignStart="@+id/test_text_log_rate" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="heartrate"
        android:id="@+id/test_text_log_rate"
        android:layout_below="@+id/test_text_log_distance"
        android:layout_centerHorizontal="true" />
</LinearLayout>
